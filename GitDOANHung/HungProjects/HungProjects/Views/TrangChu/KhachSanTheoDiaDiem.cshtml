@model IEnumerable<HungProjects.Models.KhachSan>

@{
    ViewBag.Title = "KhachSanTheoDiaDiem";
    Layout = "~/Views/Layout/LayoutNguoiDung.cshtml";
}

<h2>KhachSanTheoDiaDiem</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <ul class="listing">
        <li>
            <div class="listinfo">
                <img src="~/Hinhanh/Khachsan/@Html.DisplayFor(modelItem => item.AnhBia)" alt="" class="listingimage" />
