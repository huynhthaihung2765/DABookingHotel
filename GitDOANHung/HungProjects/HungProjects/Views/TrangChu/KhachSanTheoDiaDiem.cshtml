                <p>@Html.DisplayFor(modelItem => item.DiaChi)</p>
                <span class="price">@Html.DisplayFor(modelItem => item.ThongTin)</span>
                <span class="media">
                    <img src="images/icon_img.jpg" alt="" width="19" height="15" /> 12 Images
                    <img src="images/videos_icon.jpg" alt="" width="21" height="18" />
                </span> 1 Video
            </div>
            <div class="listingbtns"> <span class="listbuttons"> <a href="#">Chi tiết</a></span></div>
            <div class="clear">&nbsp;</div>
        </li>
    </ul>
}
