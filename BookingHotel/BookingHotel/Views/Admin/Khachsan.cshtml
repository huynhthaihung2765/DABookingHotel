@*@model IEnumerable<BookingHotel.Models.KhachSan>*@
@using BookingHotel.Models
@using PagedList.Mvc;
@model PagedList.PagedList<BookingHotel.Models.KhachSan>
@helper Truncate(string input, int length)
{
if (input.Length < length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}

}
@{
    ViewBag.Title = "Khachsan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Khách sạn</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bảng khách sạn của hệ thống
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tên khách sạn</th>
                            <th>Địa điểm</th>
                            <th>Địa chỉ(s)</th>
                            <th>Thông tin</th>
                            <th>Ảnh bìa</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="odd gradeX">
                            <td>@Html.DisplayFor(m => item.TenKhachSan)</td>
                            <td>@Html.DisplayFor(m => item.MaDiaDiem)</td>
                            <td>@Html.DisplayFor(m => item.DiaChi)</td>
                            <td class="center">
                                @Html.DisplayFor(m => item.ThongTin)
                            </td>
                            <td class="center">
                                <img src="@Url.Content("~/Hinhanh/Khachsan/" + item.AnhBia)" width="70" />
                            </td>
                            <td width="10%">
                                @Html.ActionLink("Sửa", "ChitietKhachsan", new { id = item.MaKhachSan })<br />
                                @Html.ActionLink("Chi tiết", "SuaKhachsan", new { id = item.MaKhachSan })<br />
                                @Html.ActionLink("Xoá", "XoaKhachsan", new { id = item.MaKhachSan })
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
                <!-- /.table-responsive -->
                <div class="well">
                    <h4></h4>                   
                    <a class="btn btn-default btn-lg btn-block" target="_blank" href="~/Admin/ThemKhachsan.cshtml">Tạo khách sạn mới</a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="menutrang">
    @Html.PagedListPager(Model, page => Url.Action("Khachsan", new { page = page }))
</div>
<style>
    .menutrang li {
        display: inline;
    }
</style>